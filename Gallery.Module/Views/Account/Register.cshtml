@model Gallery.Module.Controllers.AccountController.RegisterViewModel

<div class="album-container">
    <div class="album-header">
        <h1>Create a New Account</h1>
        <p class="album-description">Register to upload photos and create your own albums</p>
    </div>

    <div class="login-form-container upload-form-container">
        <form asp-controller="Account" asp-action="Register" method="post" class="upload-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="email" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="upload-button">Register</button>
            </div>

            <div class="additional-links">
                <p>
                    Already have an account?
                    <a asp-controller="Account" asp-action="Login">Sign in</a>
                </p>
            </div>
        </form>
    </div>
</div>
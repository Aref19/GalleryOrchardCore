@model Gallery.Module.Controllers.AccountController.LoginViewModel

<div class="album-container">
    <div class="album-header">
        <h1>Login to Your Account</h1>
        <p class="album-description">Sign in to access your albums and upload photos</p>
    </div>

    <div class="login-form-container upload-form-container">
        <form asp-controller="Account" asp-action="Login" method="post" class="upload-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" autocomplete="email" autofocus />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe" type="checkbox" />
                        Remember me
                    </label>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="upload-button">Log in</button>
            </div>

            <div class="additional-links">
                <p>
                    <a asp-controller="Account" asp-action="ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register">Register now</a>
                </p>
            </div>
        </form>
    </div>
</div>
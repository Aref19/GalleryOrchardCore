@model OrchardCore.ContentManagement.ContentItem

<div class="container">
    <h1>@Model.DisplayText</h1>

    <div class="row">
        <div class="col-md-8">
            @{
                
                    var photoPart = Model.Content.PhotoPart;
                // Sicherstellen, dass ImageMediaPath ein String ist
                var imagePath = Model.Content.PhotoPart?.ImageMediaPath as string;
       
        
                    
                <img class="card-img-top"
                     src="@Url.Content("~/Media" + (string)Model.Content.PhotoPart.ImageMediaPath)"
                     alt="@Model.DisplayText" />
            
    
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Details</h5>

                    @if (Model.Content.PhotoPart?.Tags is List<string> tags && tags.Any())
                    {
                        <h6>Tags:</h6>
                        <p>
                            @foreach (var tag in tags)
                            {
                                <span class="badge bg-secondary me-1">@tag</span>
                            }
                        </p>
                    }

                    @{
                        var albumId = Model.Content.PhotoPart?.AlbumContentItemId as string;
                    }
                    @if (!string.IsNullOrEmpty(albumId))
                    {
                        <p>
                            <a asp-action="Album" asp-route-albumId="@albumId" class="btn btn-primary">Back to Album</a>
                        </p>
                    }

                    <a asp-action="Index" class="btn btn-secondary">Back to Albums</a>
                </div>
            </div>
        </div>
    </div>
</div>